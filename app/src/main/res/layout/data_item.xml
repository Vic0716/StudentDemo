<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bikeimg"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvstation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textSize="22sp"
        android:textColor="#00ff00"
        app:layout_constraintStart_toEndOf="@+id/bikeimg"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvrent"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="26dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/bikeimg"
        app:layout_constraintTop_toBottomOf="@+id/tvstation" />

    <TextView
        android:id="@+id/tvspace"
        android:layout_width="61dp"
        android:layout_height="19dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/bikeimg"
        app:layout_constraintTop_toBottomOf="@+id/tvrent" />
</androidx.constraintlayout.widget.ConstraintLayout>